<div class="general-container">
  <div class="header">
    <div></div>
    <%= image_tag "logo-titles.png", class: "logo-title" %>
    <h1 class="text-center mx-2">SE CONNECTER</h1>
    <%= image_tag "logo-titles.png", class: "logo-title"%>
    <div></div>
  </div>

  <div class="w-50 m-auto">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    label: "Mot de passe" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions d-flex flex-column justify-content-between">
        <%= f.button :submit, "Se connecter", class: "w-50 m-auto form-btn mb-5" %>
        <div class="d-flex flex-column justify-content-between align-items-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>

  </div>
</div>
